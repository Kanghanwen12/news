{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "removeComments": true,
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src", "types", "css"],
  "exclude": [
    "node_modules"
  ],
}
